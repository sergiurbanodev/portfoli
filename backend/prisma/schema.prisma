generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  surname   String
  birthdate DateTime
  status    Status
  email     String   @unique
  password  String
  username  String
}

model Project {
  id                  Int          @id @default(autoincrement())
  name                String
  image               String
  lightDescription    String
  detailedDescription String
  url                 String
  technologies        Technology[]
}

model Course {
  id          Int     @id @default(autoincrement())
  title       String
  author      String
  description String
  image       String
  link        String
  duration    Decimal
  rating      Decimal
}

model Certificate {
  id    Int    @id @default(autoincrement())
  title String
  image String
}

model Technology {
  id            Int       @id @default(autoincrement())
  name          String
  logo          String
  documentation String
  projects      Project[]
}

enum Status {
  WORKING
  FINDING_JOB
  STUDYING
}
